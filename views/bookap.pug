block content 
    
    nav#navbar          
                ul 
                    li  #[a(href="/") Home]                  
                    li  #[a(href="/login") Admin Login]           
                    //- li  #[a(href="/") Services]         
                    //- li  #[a(href="/") About Us]         
                    li  #[a(href="/bookap") Book Appointment]  
    div.mycontact                
        h1 book an appointment

        form(action="/bookap" method="POST" id="contactform")
            div select reason:
                select#reason(name="reason") 
                        option(value="adhar") adhar
                        option(value="electioncard") electioncard
                        option(value="seventwelve") 7/12
            input(type="text" name="name1" placeholder="enter your name" class="item")         
            input(type="phone" name="phone1" placeholder="enter your phone number" class="item")         
            input(type="email" name="email1"  placeholder="enter your email" class="item")  
            div.datetime
                //- input.date(type="date", name="date") 
                |day:
                select.times#day(name="day") 
                    option(value="1" selected) 1
                    option(value="2") 2
                    option(value="3") 3
                    option(value="4") 4
                    option(value="5") 5
                    option(value="6") 6
                    option(value="7") 7
                    option(value="8") 8
                    option(value="9") 9
                    option(value="10") 10
                    option(value="11") 11
                    option(value="12") 12
                    option(value="13") 13
                    option(value="14") 14
                    option(value="15") 15
                    option(value="16") 16
                    option(value="17") 17
                    option(value="18") 18
                    option(value="19") 19
                    option(value="20") 20
                    option(value="21") 21
                    option(value="22") 22
                    option(value="23") 23
                    option(value="24") 24
                    option(value="25") 25
                    option(value="26") 26
                    option(value="27") 27
                    option(value="28") 28
                    option(value="29") 29
                    option(value="30") 30
                |month:
                select.times#month(name="month")  
                    option(value="1" selected) 1
                    option(value="2") 2
                    option(value="3") 3
                    option(value="4") 4
                    option(value="5") 5
                    option(value="6") 6
                    option(value="7") 7
                    option(value="8") 8
                    option(value="9") 9
                    option(value="10") 10
                    option(value="11") 11
                    option(value="12") 12  
                |year:    
                select.times#year(name="year")  
                    option(value="2022" selected) 2022    
                    option(value="2023") 2023   

                |time:
                select.times#timeslot(name="time") 
                    option(value="11") 10:30 - 11:30
                    option(value="12") 11:30 - 12:30
                    //- option(value="1") 12:30 - 1:30
                    option(value="2") 1:30 - 2:30
                    option(value="3") 2:30 - 3:30
                    option(value="4") 3:30 - 4:30
                    option(value="5") 4:30 - 5:30
                
                //- div#timeSelect 
                //-     ul 
                //-         li  #[a(href="/insertIntable11") 10:30 - 11:30]                  
                //-         li  #[a(href="/insertIntable12") 11:30 - 12:30]          
                //-         li  #[a(href="/insertIntable13") 12:30 - 1:30]         
                //-         li  #[a(href="/insertIntable14") 1:30 - 2:30]         
                //-         li  #[a(href="/insertIntable15") 3:30 - 4:30]  

            input(type="textarea" name="message1" placeholder="enter your Message/preference" class="item")   
            button(class="btn") 
              | submit   

            h3.submited 

            p#success= success_message
            h4#fail= fail_message

            //- p(color='green')=res 



    
